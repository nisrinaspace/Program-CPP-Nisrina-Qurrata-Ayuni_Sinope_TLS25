#include <iostream>
#include <string>
using namespace std;

// Fungsi untuk cek huruf vokal
bool isVowel(char c) {
    c = tolower(c);
    return (c == 'a' || c == 'i' || c == 'u' || c == 'e' || c == 'o');
}

// Fungsi manual reverse
string manualReverse(string s) {
    int n = s.length();
    for (int i = 0; i < n / 2; i++) {
        char temp = s[i];
        s[i] = s[n - i - 1];
        s[n - i - 1] = temp;
    }
    return s;
}

// Fungsi enkripsi (buat password)
string encrypt(string word) {
    if (word.empty()) return "";

    // 1. Buang vokal
    string noVowel = "";
    for (int i = 0; i < word.length(); i++) {
    char c = word[i];
    if (!isVowel(c)) noVowel += c;
}


    // 2. Balik string (manual)
    string reversed = manualReverse(noVowel);

    // 3. Sisipkan ASCII huruf pertama ke tengah
    int asciiVal = (int)word[0];
    string asciiStr = to_string(asciiVal);

    int mid = reversed.length() / 2;
    string password = reversed.substr(0, mid) + asciiStr + reversed.substr(mid);

    return password;
}

int main() {
    string input;
    cout << "Masukkan kata: ";
    cin >> input;

    string hasil = encrypt(input);
    cout << "Password hasil enkripsi: " << hasil << endl;

    return 0;
}
